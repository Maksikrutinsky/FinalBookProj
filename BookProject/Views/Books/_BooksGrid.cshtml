@model IEnumerable<BookProject.Models.Book>

<style>
    .books-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        padding: 20px;
    }

    .card {
        height: 100%;
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .card-img-top {
        height: 300px;
        object-fit: contain;
        padding: 10px;
    }

    .price-section {
        margin: 15px 0;
    }

    .borrow-price {
        color: #28a745;
        font-weight: bold;
    }

    .current-price {
        color: #007bff;
        font-weight: bold;
    }

    .rating {
        margin-top: 10px;
    }

    .star {
        color: #ffd700;
        margin-right: 3px;
    }

    .empty-star {
        color: #e4e5e9;
    }

    .original-price {
        text-decoration: line-through;
        color: #6c757d;
        margin-right: 10px;
    }
</style>

<div class="books-grid">
    @foreach (var book in Model)
    {
        <div class="book-card">
            <div class="card">
                <a href="@Url.Action("Details", "Books", new { id = book.BookId })">
                    <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title">
                </a>
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="@Url.Action("Details", "Books", new { id = book.BookId })"
                           class="text-decoration-none text-dark">
                            @book.Title
                        </a>
                    </h5>

                    <p class="card-text">
                        <strong>Author:</strong> @book.Author<br>
                        <strong>Publisher:</strong> @book.Publisher<br>
                        <strong>Year:</strong> @book.PublishYear
                    </p>

                    <div class="price-section">
                        @if (book.PreviousPrice.HasValue)
                        {
                            <div class="mb-1">
                                <span class="original-price">₪@book.PreviousPrice</span>
                            </div>
                        }

                        @if (book.IsBuyable == true)
                        {
                            <div class="mb-1">
                                <strong>Buy:</strong> <span class="current-price">₪@book.BuyPrice</span>
                            </div>
                        }

                        @if (book.IsBorrowable == true)
                        {
                            <div class="mb-1">
                                <strong>Borrow:</strong> <span class="borrow-price">₪@book.BorrowPrice</span>
                            </div>
                        }
                        else
                        {
                            <div class="text-muted">
                                <small>(Not available for borrowing)</small>
                            </div>
                        }
                    </div>

                    <div class="rating">
                        @{
                            var rating = ViewBag.BooksRatings[book.BookId];
                            for (int i = 1; i <= 5; i++)
                            {
                                if (i <= rating)
                                {
                                    <span class="star">★</span>
                                }
                                else
                                {
                                    <span class="star empty-star">★</span>
                                }
                            }
                            <span class="rating-value">(@rating)</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>