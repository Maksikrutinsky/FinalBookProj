@model IEnumerable<BookProject.Models.Book>

<style>


    .card-img-top {
        height: 300px;
        object-fit: contain;
        padding: 10px;
    }

    .card {
        height: 100%;
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .rating {
        color: darkgoldenrod;
        font-size: 1.2rem;
    }

    .star {
        margin-right: 2px;
    }

    .empty-star {
        color: #e4e5e9;
    }

    .original-price {
        text-decoration: line-through;
        color: #6c757d;
        margin-right: 10px;
    }

    .current-price {
        font-weight: bold;
        color: #000;
    }

    .price-section {
        margin-top: 10px;
    }

    .filters-container {
        margin-bottom: 30px;
    }
</style>

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row align-items-center mb-4">
        <div class="col-6">
            <h2>Our Book Library</h2>
        </div>
        @if (ViewBag.IsAdmin)
        {
            <button class="gradient-button">
                <a href="@Url.Action("AddBook", "Books")" class="gradient-button-text">Add a new book</a>
            </button>
        }
    </div>


    <div class="filters-container">
        <div class="row">
            <div class="col-md-4 mb-3">
                <input type="text"
                       id="searchInput"
                       class="form-control"
                       placeholder="Search by book title or author name..."
                       value="@ViewBag.CurrentSearch">
            </div>

            <div class="col-md-4 mb-3">
                @Html.DropDownList("genre",
                    new SelectList(ViewBag.Genres, "Value", "Text"),
                    "All Genres",
                    new { @class = "form-control", @id = "genreSelect" })
            </div>

            <div class="col-md-4 mb-3">
                <select id="sortOrder" class="form-control">
                    <option value="">Sort By...</option>
                    <option value="price_asc">Price: Low to High</option>
                    <option value="price_desc">Price: High to Low</option>
                    <option value="year_desc">Year: Newest First</option>
                    <option value="year_asc">Year: Oldest First</option>
                    <option value="rating">Popularity (Rating)</option>
                </select>
            </div>
        </div>
    </div>

    <div id="booksContainer" class="books-grid">
        @Html.Partial("_BooksGrid", Model)
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var timer;

            function updateResults() {
                var searchTerm = $('#searchInput').val();
                var genre = $('#genreSelect').val();
                var sortOrder = $('#sortOrder').val();
                var publisher = $('#publisherSelect').val(); 

                $.ajax({
                    url: '@Url.Action("Gallery", "Books")',
                    type: 'GET',
                    data: {
                        searchTerm: searchTerm,
                        genre: genre,
                        sortOrder: sortOrder
                    },
                    success: function(data) {
                        $('#booksContainer').html(data);
                    },
                    error: function(xhr, status, error) {
                        console.error('Error:', error);
                    }
                });
            }
            
            $('#searchInput').on('input', function() {
                clearTimeout(timer);
                timer = setTimeout(updateResults, 300);
            });

            $('#genreSelect, #sortOrder').change(function() {
                updateResults();
            });

            if ($('#searchInput').val()) {
                updateResults();
            }

            // טיפול במחיקת ספר
            $(document).on('click', '.delete-book', function(e) {
                e.preventDefault();
                
                var bookId = $(this).data('book-id');
                var $card = $(this).closest('.col-md-4');
                
                if (confirm('האם אתה בטוח שברצונך למחוק ספר זה?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteBook", "Books")',
                        type: 'POST',
                        data: { id: bookId },
                        success: function(response) {
                            if (response.success) {
                                $card.fadeOut(300, function() {
                                    $(this).remove();
                                });
                                
                                var alert = $('<div class="alert alert-success alert-dismissible fade show" role="alert">' +
                                    response.message +
                                    '<button type="button" class="close" data-dismiss="alert" aria-label="Close">' +
                                    '<span aria-hidden="true">&times;</span></button></div>');
                                $('.container').prepend(alert);

                                // עדכון התצוגה לאחר מחיקה
                                setTimeout(updateResults, 300);
                            } else {
                                var alert = $('<div class="alert alert-danger alert-dismissible fade show" role="alert">' +
                                    response.message +
                                    '<button type="button" class="close" data-dismiss="alert" aria-label="Close">' +
                                    '<span aria-hidden="true">&times;</span></button></div>');
                                $('.container').prepend(alert);
                            }
                        },
                        error: function() {
                            var alert = $('<div class="alert alert-danger alert-dismissible fade show" role="alert">' +
                                'אירעה שגיאה במחיקת הספר' +
                                '<button type="button" class="close" data-dismiss="alert" aria-label="Close">' +
                                '<span aria-hidden="true">&times;</span></button></div>');
                            $('.container').prepend(alert);
                        }
                    });
                }
            });

            // סגירת הודעות אוטומטית
            $(document).on('click', '.alert .close', function() {
                $(this).closest('.alert').fadeOut(300, function() {
                    $(this).remove();
                });
            });

            // הסרה אוטומטית של הודעות אחרי 5 שניות
            setTimeout(function() {
                $('.alert').fadeOut(300, function() {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
}
