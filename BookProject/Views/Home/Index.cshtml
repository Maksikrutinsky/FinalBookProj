@model IEnumerable<BookProject.Models.Book>
@using BookProject.Models

@{
    ViewBag.Title = "Home Page";
}

<!-- Alert Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Styles -->

<style>
    /* גלובלי ורספונסיבי */
    .row { display: flex; flex-wrap: wrap; margin: -15px; }
    .col-md-3 { flex: 0 0 25%; max-width: 25%; padding: 15px; }
    
    .category-circle i {
        font-size: 2rem;
        color: #1a5f7a;
        transition: all 0.3s ease;
    }

    .category-item:hover .category-circle i {
        transform: scale(1.2);
        color: #2e86ab;
    }

    /* אזור ספרים מובילים */
    .hero-section {
        background: transparent;
        padding: 3rem 2rem;
        padding-left: 0;
        margin-top: 0;
        min-height: 600px;
        width: 90%;
        max-width: 1600px;
        display: flex;
        align-items: center;
        position: relative; /* נוסף */
        overflow: hidden; /* נוסף */
    }

    .container {
        max-width: 500px;
        margin: 0;
        padding: 0;
        width: 100%;
    }

    .hero-content {
        display: flex;
        padding-left: 5%;
        margin-left: 2rem;  /* מרווח קטן מהקצה */
        flex-direction: column;
        gap: 2rem;
        max-width: 600px;
        position: relative; /* נוסף */
        z-index: 2; /* נוסף */
    }

    .row {
        margin: 0;
        padding: 0;
    }

    .col-md-6 {
        padding: 0;
    }

    .book-container {
        position: absolute;
        right: -120rem;
        top: 30%;
        transform: translateY(-75%);
        height: 500px;
        width: 800px;
    }

    .col-md-6:first-child {
        padding-left: 0;
        margin-left: 0;
    }

    .hero-title {
        font-size: 4.5rem;
        font-weight: bold;
        color: #003366;
        text-align: left;
        line-height: 1.2;
        margin-left: 0;  /* הסרת מרווח משמאל */
    }

    .hero-subtitle {
        font-size: 1.8rem;
        color: #004d99;
        text-align: left;
        opacity: 0.9;
    }

    .browse-button {
        display: inline-block;
        background: #dc3545;
        color: white;
        padding: 1.2rem 2.5rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease;
        font-size: 1.2rem;
        margin-top: 1rem;
    }

    .browse-button:hover {
        background: #c82333;
        transform: translateY(-2px);
    }
    
    .book-display {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .book-cover {
        position: absolute;
        width: 240px;
        height: 360px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        transition: all 0.3s ease;
        border-radius: 8px;
        overflow: hidden;
    }

    .book-cover:hover {
        transform: translateY(-20px) rotate(0deg) !important;
        z-index: 4 !important;
    }

    .book-cover:nth-child(1) {
        right: 280px;
        top: 60px;
        transform: rotate(-15deg);
        z-index: 1;
    }

    .book-cover:nth-child(2) {
        right: 160px;
        top: 20px;
        transform: rotate(0deg);
        z-index: 3;
    }

    .book-cover:nth-child(3) {
        right: 40px;
        top: 60px;
        transform: rotate(15deg);
        z-index: 1;
    }

    .book-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    @@media (max-width: 992px) {
    .hero-title {
        font-size: 3.5rem;
    }

    .hero-subtitle {
        font-size: 1.5rem;
    }

    .book-cover {
        width: 200px;
        height: 300px;
    }
    }

    @@media (max-width: 768px) {
    .hero-section {
        padding: 4rem 2rem;
        min-height: auto;
    }

    .hero-title {
        font-size: 2.5rem;
    }

    .book-container {
        height: 400px;
        margin-top: 3rem;
    }

    .book-cover {
        width: 160px;
        height: 240px;
    }

    .book-cover:nth-child(1) { right: 200px; }
    .book-cover:nth-child(2) { right: 120px; }
    .book-cover:nth-child(3) { right: 40px; }
    }

    .top-rated-title {
        font-size: 2.8rem;
        font-weight: 800;
        text-align: center;
        margin-bottom: 3rem;
        background: linear-gradient(45deg, #1a5f7a, #2e86ab);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        position: relative;
        z-index: 1;
    }

    /* כרטיסי ספרים */
    .product-wrapper {
        position: relative;
        background: white;
        border-radius: 8px;
        overflow: visible;
        transform: perspective(1000px) rotateY(0deg);
        transform-style: preserve-3d;
        transition: all 0.4s ease;
        margin-bottom: 30px;
        box-shadow:
            -15px 15px 10px rgba(0,0,0,0.2),
            0 4px 6px rgba(0,0,0,0.1);
    }

    .product-wrapper:hover {
        transform: perspective(1000px) rotateY(10deg) translateY(-10px);
        box-shadow:
            -25px 25px 15px rgba(0,0,0,0.3),
            0 8px 12px rgba(0,0,0,0.15);
    }

    .product-img {
        position: relative;
        padding-top: 140%;
    }

    .product-img::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 20px;
        height: 100%;
        background: linear-gradient(to right,
        rgba(0,0,0,0.1),
        rgba(0,0,0,0.05) 10%,
        transparent 50%);
        transform: translateX(-100%) rotateY(-90deg);
        transform-origin: right;
    }

    .product-img img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    

    .book-rating i.fa-star {
        color: #f6ae2d;
    }

    /* כפתורי פעולה */

    .product-wrapper:hover .product-action-style {
        opacity: 1;
        visibility: visible;
        transform: translateX(-50%) translateZ(20px) translateY(-5px);
    }

    .action-button:hover {
        transform: scale(1.1);
        background: #1a5f7a;
        color: white;
    }

    @@media (max-width: 768px) {
    .col-md-3 {
        flex: 0 0 50%;
        max-width: 50%;
    }
        
    }

    @@media (max-width: 480px) {
    .col-md-3 {
        flex: 0 0 100%;
        max-width: 100%;
    }

    .category-item {
        flex: 0 0 100%;
    }
    }
</style>

<!-- Top Rated Section -->
<div class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="hero-content">
                    <h1 class="hero-title">Explore & read millions of books online for free</h1>
                    <p class="hero-subtitle">Find your next favorite book in our collection</p>
                    <a href="@Url.Action("Gallery", "Books")" class="browse-button">Browse our collection</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="book-container">
                    <div class="book-display">
                        @foreach (var book in Model.Take(3))
                        {
                            <div class="book-cover">
                                <a href="@Url.Action("Details", "Books", new { id = book.BookId })">
                                    <img src="@book.CoverImageUrl" alt="@book.Title">
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reviews Section -->
<section class="reviews-section">
    <div class="section-header">
        <h2 class="reviews-title">What Our Readers Say</h2>
        <div class="reviews-subtitle">Join thousands of satisfied readers</div>
    </div>

    <div class="reviews-container">
        <div class="reviews-wrapper">
            @foreach (var review in ViewBag.TopReviews ?? new List<BookProject.Models.SiteReviewViewModel>())
            {
                <div class="review-card">
                    <div class="review-header">
                        <div class="user-avatar">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div class="user-info">
                            <h4>@review.Username</h4>
                            <div class="review-rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= review.RatingValue ? "active" : "")"></i>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="review-content">
                        <p>@review.Comment</p>
                    </div>
                    <div class="review-footer">
                        <span class="review-date">@review.CreatedAt.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="view-all-reviews">
        <a href="@Url.Action("Index", "SiteReview")" class="review-button">View All Reviews</a>
    </div>
</section>

<style>
    .reviews-section {
        padding: 1rem 0;
        background: transparent;
        margin-top: 0;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .reviews-title {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(45deg, #1a5f7a, #2e86ab);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: 1rem;
    }

    .reviews-subtitle {
        font-size: 1.2rem;
        color: #6c757d;
    }

    .reviews-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .reviews-wrapper {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        display: flex;
        flex-direction: row;
        gap: 2rem;
        justify-content: center;
    }

    .review-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);  
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        flex: 1;
        min-width: 300px;
        max-width: 400px;
    }

    .review-card::before {
        content: '"';
        position: absolute;
        top: -20px;
        left: 20px;
        font-size: 8rem;
        color: rgba(30, 95, 122, 0.1);
        font-family: serif;
    }

    .review-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }

    .review-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .user-avatar i {
        font-size: 3rem;
        color: #1a5f7a;
    }

    .user-info h4 {
        margin: 0;
        color: #2c3e50;
        font-size: 1.2rem;
    }

    .review-rating {
        display: flex;
        gap: 4px;
        margin-top: 0.5rem;
    }

    .review-rating i {
        color: #ddd;
        font-size: 1rem;
    }

    .review-rating i.active {
        color: #ffd700;
    }

    .review-content {
        font-size: 1rem;
        line-height: 1.6;
        color: #4a5568;
        margin-bottom: 1.5rem;
    }

    .review-footer {
        display: flex;
        justify-content: flex-end;
    }

    .review-date {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .view-all-reviews {
        text-align: center;
        margin-top: 3rem;
    }

    .review-button {
        display: inline-block;
        padding: 1rem 2.5rem;
        background: #1a5f7a;
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .review-button:hover {
        background: #2e86ab;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    @@media (max-width: 768px) {
        .reviews-wrapper {
            grid-template-columns: 1fr;
        }

        .reviews-title {
            font-size: 2rem;
        }

        .review-card {
            padding: 1.5rem;
        }
    }
</style>

<div class="welcome-section">
    <div class="features">
        <div class="row">
            <div class="col-md-4">
                <div class="feature-box">
                    <i class="fas fa-books fa-3x"></i>
                    <div class="feature-counter">10K+</div>
                    <h3>Rich Library</h3>
                    <p>Thousands of digital books across genres from world's best authors</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box">
                    <i class="fas fa-mobile-alt fa-3x"></i>
                    <div class="feature-counter">24/7</div>
                    <h3>Read Anywhere</h3>
                    <p>Access your books from any device, anytime, anywhere</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box">
                    <i class="fas fa-heart fa-3x"></i>
                    <div class="feature-counter">98%</div>
                    <h3>Perfect Reading Experience</h3>
                    <p>User-friendly interface, bookmarks, and personalized optimal reading experience</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container text-center">
        <button class="gradient-button">
            <a href="#" class="gradient-button-text">Start Reading Now!</a>
        </button>
    </div>
</div>

<style>
    .welcome-section {
        padding: 6rem 0;
        background: transparent;
        position: relative;
        overflow: hidden;
    }

    .welcome-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.1;
    }

    .features {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .feature-box {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 3rem 2rem;
        text-align: center;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
        height: 100%;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .feature-box::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, #1a5f7a, #2e86ab);
        transform: scaleX(0);
        transition: transform 0.4s ease;
    }
    
    .feature-box:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .feature-box:hover::before {
        transform: scaleX(1);
    }

    .feature-box i {
        font-size: 3.5rem;
        background: linear-gradient(45deg, #1a5f7a, #2e86ab);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: 1.5rem;
        display: inline-block;
        transition: transform 0.3s ease;
    }

    .feature-box:hover i {
        transform: scale(1.1) rotate(5deg);
    }

    .feature-box h3 {
        font-size: 1.8rem;
        color: #2c3e50;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .feature-box p {
        font-size: 1.1rem;
        color: #6c757d;
        line-height: 1.6;
    }

    .feature-counter {
        font-size: 3rem;
        font-weight: 800;
        background: linear-gradient(45deg, #1a5f7a, #2e86ab);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: 0.5rem;
    }

    .gradient-button {
        background: linear-gradient(45deg, #1a5f7a, #2e86ab);
        border: none;
        padding: 1rem 3rem;
        margin: 4rem auto 0;
        border-radius: 50px;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
        text-align: center;
        overflow: hidden;
    }

    .gradient-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, rgba(255,255,255,0.2), transparent);
        transition: all 0.5s ease;
    }

    .gradient-button:hover::before {
        left: 100%;
    }

    .gradient-button-text {
        color: white;
        font-size: 1.2rem;
        font-weight: 600;
        text-decoration: none;
        position: relative;
        z-index: 1;
    }

    @@media (max-width: 768px) {
    .feature-box {
        margin-bottom: 2rem;
    }

    .feature-box h3 {
        font-size: 1.5rem;
    }

    .feature-box p {
        font-size: 1rem;
    }
    }
</style>
