@{
    ViewBag.Title = "Check Your Email";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Check Your Email</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-content {
            width: 75%;
            max-width: 1200px;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            margin: 3em auto;
            display: flex;
            background: white;
            position: relative;
            overflow: hidden;
        }

        .company__info {
            background: linear-gradient(135deg, #1a5f7a 0%, #2e86ab 100%);
            border-top-left-radius: 20px;
            border-bottom-left-radius: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #fff;
            padding: 4em 2em;
            width: 35%;
            position: relative;
        }

        .company__info::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><path fill="%23FFFFFF20" d="M42,-65.9C55.5,-56.7,68.1,-47,75.5,-33.7C82.8,-20.4,84.9,-3.6,81.5,11.7C78.2,26.9,69.4,40.5,57.7,50.7C46,60.9,31.4,67.7,15.8,71.6C0.3,75.5,-16.2,76.4,-31.3,71.9C-46.3,67.4,-59.8,57.4,-69.1,44.1C-78.3,30.8,-83.3,14.1,-82.6,-2.3C-81.8,-18.7,-75.4,-34.8,-64.8,-46.4C-54.2,-58,-39.5,-65,-25.7,-71.1C-11.9,-77.2,1,-82.4,13.8,-79.8C26.5,-77.3,38.9,-67,42,-65.9Z" transform="translate(100 100)"/></svg>') no-repeat center center;
            opacity: 0.1;
        }

        .logo-img {
            max-width: 80%;
            height: auto;
            margin-bottom: 2em;
            filter: drop-shadow(0 5px 15px rgba(0,0,0,0.2));
        }

        .company_title {
            font-size: 2em;
            font-weight: 600;
            text-align: center;
            margin-top: 1em;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }

        .content__section {
            flex: 1;
            padding: 3em 6em;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .email-icon {
            font-size: 5em;
            color: #1a5f7a;
            margin-bottom: 0.5em;
            animation: floatIcon 3s ease-in-out infinite;
        }

        @@keyframes floatIcon {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .title {
            color: #1a5f7a;
            text-align: center;
            margin-bottom: 1em;
            font-size: 2.5em;
            font-weight: 600;
            position: relative;
        }

        .title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, #1a5f7a, #2e86ab);
            border-radius: 2px;
        }

        .message {
            text-align: center;
            color: #4a5568;
            line-height: 1.8;
            margin-bottom: 2.5em;
            max-width: 80%;
            font-size: 1.1em;
        }

        .back-btn {
            padding: 1em 3em;
            border-radius: 8px;
            border: none;
            background: linear-gradient(135deg, #1a5f7a 0%, #2e86ab 100%);
            color: white;
            text-decoration: none;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .back-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: all 0.5s ease;
        }

        .back-btn:hover::before {
            left: 100%;
        }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(46,134,171,0.3);
        }

        .footer {
            text-align: center;
            margin-top: auto;
            padding: 2em;
            color: #666;
        }

        @@media screen and (max-width: 1024px) {
        .main-content {
            width: 90%;
        }
        }

        @@media screen and (max-width: 768px) {
        .main-content {
            flex-direction: column;
            width: 95%;
        }

        .company__info {
            width: 100%;
            border-radius: 20px 20px 0 0;
            padding: 2em;
        }

        .content__section {
            padding: 2em;
        }

        .message {
            max-width: 90%;
        }

        .title {
            font-size: 2em;
        }
        }
    </style>
</head>
<body>
<div class="main-content">
    <div class="company__info">
        <img src="~/content/images/readerlogin.png" alt="Reader Logo" class="logo-img">
        <h4 class="company_title">Check Your Inbox</h4>
    </div>
    <div class="content__section">
        <i class="fas fa-envelope-open-text email-icon"></i>
        <h2 class="title">Check Your Email</h2>
        <p class="message">
            We've sent password reset instructions to your email address.<br>
            Please check your inbox and follow the instructions to reset your password.
        </p>
        @Html.ActionLink("Back to Login", "Login", "Account", null, new { @class = "back-btn" })
    </div>
</div>

<div class="footer">
    <p>&copy; @DateTime.Now.Year - BookProject</p>
</div>
</body>
</html>