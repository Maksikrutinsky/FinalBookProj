@{
    ViewBag.Title = "Check Your Email";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Check Your Email</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .main-content {
            width: 50%;
            border-radius: 20px;
            box-shadow: 0 5px 5px rgba(0,0,0,.4);
            margin: 5em auto;
            display: flex;
        }

        .company__info {
            background-color: #008080;
            border-top-left-radius: 20px;
            border-bottom-left-radius: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #fff;
            padding: 2em;
            width: 300px;
        }

        .logo-img {
            object-fit: contain;
            max-width: 100%;
            height: auto;
            display: block;
            margin: 0 auto;
        }

        .content__section {
            background-color: transparent;
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
            border-top: 1px solid #ccc;
            border-right: 1px solid #ccc;
            padding: 2em;
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .email-icon {
            font-size: 4em;
            color: #008080;
            margin-bottom: 0.5em;
        }

        .title {
            color: #008080;
            text-align: center;
            margin-bottom: 1em;
            font-size: 1.8em;
        }

        .message {
            text-align: center;
            color: #666;
            line-height: 1.6;
            margin-bottom: 2em;
            max-width: 80%;
        }

        .back-btn {
            background-color: transparent;
            border: 2px solid #008080;
            color: #008080;
            padding: 0.8em 2em;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background-color: #008080;
            color: white;
        }

        @@media screen and (max-width: 640px) {
            .main-content {
                width: 90%;
            }
            .company__info {
                display: none;
            }
            .content__section {
                border-radius: 20px;
            }
        }

        @@media screen and (min-width: 642px) and (max-width:800px) {
            .main-content {
                width: 70%;
            }
        }

        .footer {
            text-align: center;
            margin-top: 2em;
            color: #666;
        }
    </style>
</head>
<body>
<div class="main-content">
    <div class="company__info">
        <img src="~/content/images/readerlogin.png" alt="Reader Logo" class="logo-img" style="width: 400px; height: auto;" />
        <h4 class="company_title">Check your inbox</h4>
    </div>
    <div class="content__section">
        <i class="fas fa-envelope email-icon"></i>
        <h2 class="title">Check Your Email</h2>
        <p class="message">
            We've sent password reset instructions to your email address.<br>
            Please check your inbox and follow the instructions to reset your password.
        </p>
        @Html.ActionLink("Back to Login", "Login", "Account", null, new { @class = "back-btn" })
    </div>
</div>

<div class="footer">
    <p>&copy; @DateTime.Now.Year - Your Application</p>
</div>
</body>
</html>