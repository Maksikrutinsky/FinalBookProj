@model string

<!DOCTYPE html>
<html>
<head>
    <title>Forgot Password</title>
    <style>
        .form-container {
            width: 350px;
            height: 400px;
            background-color: rgba(228, 244, 242, 0.7);
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
            border-radius: 10px;
            box-sizing: border-box;
            padding: 20px 30px;
            margin: 50px auto;
        }

        .title {
            text-align: center;
            font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
            "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
            margin: 10px 0 30px 0;
            font-size: 28px;
            font-weight: 800;
        }

        .form {
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 18px;
            margin-bottom: 15px;
        }

        .input {
            width: 100%;
            border-radius: 20px;
            border: 1px solid #c0c0c0;
            outline: 0 !important;
            box-sizing: border-box;
            padding: 12px 15px;
        }

        .form-btn {
            padding: 10px 15px;
            font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
            "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
            border-radius: 20px;
            border: 0 !important;
            outline: 0 !important;
            background: teal;
            color: white;
            cursor: pointer;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            width: 100%;
            margin-top: 20px;
        }

        .form-btn:active {
            box-shadow: none;
        }

        .back-to-login {
            text-align: center;
            margin-top: 20px;
        }

        .back-to-login-link {
            color: teal;
            text-decoration: underline;
            font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
            "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
            font-size: 11px;
            font-weight: 700;
        }

        .text-danger {
            color: red;
            font-size: 0.8em;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2 class="title">Reset Password</h2>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form">
                <div>
                    @Html.TextBox("Email", null, new { @class = "input", placeholder = "Enter your email" })
                    @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="form-btn">Send Reset Link</button>
            </div>
        }

        <div class="back-to-login">
            @Html.ActionLink("Back to Login", "Login", "Account", null, new { @class = "back-to-login-link" })
        </div>
    </div>
</body>
</html>