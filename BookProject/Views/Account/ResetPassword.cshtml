@model BookProject.Models.User

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Reset Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-content {
            width: 75%;
            max-width: 1200px;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            margin: 3em auto;
            display: flex;
            background: white;
            position: relative;
            overflow: hidden;
        }

        .company__info {
            background: linear-gradient(135deg, #1a5f7a 0%, #2e86ab 100%);
            border-top-left-radius: 20px;
            border-bottom-left-radius: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #fff;
            padding: 4em 2em;
            width: 35%;
            position: relative;
        }

        .company__info::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><path fill="%23FFFFFF20" d="M42,-65.9C55.5,-56.7,68.1,-47,75.5,-33.7C82.8,-20.4,84.9,-3.6,81.5,11.7C78.2,26.9,69.4,40.5,57.7,50.7C46,60.9,31.4,67.7,15.8,71.6C0.3,75.5,-16.2,76.4,-31.3,71.9C-46.3,67.4,-59.8,57.4,-69.1,44.1C-78.3,30.8,-83.3,14.1,-82.6,-2.3C-81.8,-18.7,-75.4,-34.8,-64.8,-46.4C-54.2,-58,-39.5,-65,-25.7,-71.1C-11.9,-77.2,1,-82.4,13.8,-79.8C26.5,-77.3,38.9,-67,42,-65.9Z" transform="translate(100 100)"/></svg>') no-repeat center center;
            opacity: 0.1;
        }

        .logo-img {
            max-width: 80%;
            height: auto;
            margin-bottom: 2em;
            filter: drop-shadow(0 5px 15px rgba(0,0,0,0.2));
        }

        .company_title {
            font-size: 2em;
            font-weight: 600;
            text-align: center;
            margin-top: 1em;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }

        .reset_form {
            flex: 1;
            padding: 3em 6em;
        }

        .row > h2 {
            color: #1a5f7a;
            font-size: 2.5em;
            font-weight: 600;
            margin-bottom: 1.5em;
            text-align: center;
            position: relative;
        }

        .row > h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, #1a5f7a, #2e86ab);
            border-radius: 2px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 2em;
        }

        .form-group label {
            font-size: 1.1em;
            color: #4a5568;
            margin-bottom: 0.5em;
            font-weight: 500;
            width: 70%;
            text-align: left;
        }

        .form-control {
            width: 70%;
            padding: 1em 1.5em;
            margin: 0.8em 0;
            border: 2px solid #e1e8ed;
            border-radius: 8px;
            font-size: 1.1em;
            transition: all 0.3s ease;
            background: #f8fafc;
            box-sizing: border-box;
        }

        .form-control:focus {
            border-color: #2e86ab;
            box-shadow: 0 0 0 4px rgba(46,134,171,0.1);
            background: white;
        }

        .btn {
            width: 70%;
            padding: 1em;
            border-radius: 8px;
            border: none;
            background: linear-gradient(135deg, #1a5f7a 0%, #2e86ab 100%);
            color: white;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin: 2em auto;
            position: relative;
            overflow: hidden;
            display: block;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: all 0.5s ease;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(46,134,171,0.3);
        }

        .validation-summary {
            width: 70%;
            margin: 0 auto 2em;
            color: #e74c3c;
            font-size: 0.9em;
            padding: 1em;
            border-left: 4px solid #e74c3c;
            background: rgba(231,76,60,0.1);
            border-radius: 4px;
            display: none;
        }

        .validation-summary.show {
            display: block;
        }

        .validation-message {
            width: 70%;
            margin: -0.8em auto 0.5em;
            color: #e74c3c;
            font-size: 0.85em;
            padding: 0.3em 0.5em;
            text-align: left;
            display: none;
        }

        .validation-message.show {
            display: block;
        }

        .footer {
            text-align: center;
            margin-top: auto;
            padding: 2em;
            color: #666;
        }

        @@media screen and (max-width: 1024px) {
            .main-content {
                width: 90%;
            }
        }

        @@media screen and (max-width: 768px) {
            .main-content {
                flex-direction: column;
                width: 95%;
            }

            .company__info {
                width: 100%;
                border-radius: 20px 20px 0 0;
                padding: 2em;
            }

            .reset_form {
                padding: 2em;
            }

            .form-control, .btn, .validation-message, .validation-summary, .form-group label {
                width: 90%;
            }
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="company__info">
            <img src="~/content/images/readerlogin.png" alt="Reader Logo" class="logo-img">
            <h4 class="company_title">Set Your New Password</h4>
        </div>
        <div class="reset_form">
            <div class="container-fluid">
                <div class="row">
                    <h2>Reset Password</h2>
                </div>
                @using (Html.BeginForm())
                {
                    <div class="validation-summary @(ViewData.ModelState.ContainsKey("") ? "show" : "")">
                        @Html.ValidationSummary(true)
                    </div>

                    @Html.HiddenFor(m => m.Email)
                    <input type="hidden" name="Token" value="@ViewBag.Token" />
                    
                    <div class="form-group">
                        <label for="Password">New Password</label>
                        @Html.Password("Password", null, new { @class = "form-control" })
                        <div class="validation-message">
                            @Html.ValidationMessage("Password")
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="ConfirmPassword">Confirm Password</label>
                        @Html.Password("ConfirmPassword", null, new { @class = "form-control" })
                        <div class="validation-message">
                            @Html.ValidationMessage("ConfirmPassword")
                        </div>
                    </div>
                    
                    <button type="submit" class="btn">Reset Password</button>
                }
            </div>
        </div>
    </div>

    <div class="footer">
        <p>&copy; @DateTime.Now.Year - BookProject</p>
    </div>

    <script>
        $(document).ready(function() {
            $('.validation-message').each(function() {
                if ($(this).text().trim() !== '') {
                    $(this).addClass('show');
                }
            });

            $('form').on('submit', function() {
                var isValid = true;
                $('.validation-message').removeClass('show');

                $('.form-control').each(function() {
                    var $input = $(this);
                    var value = $input.val();
                    var $error = $input.siblings('.validation-message');

                    if (!value) {
                        isValid = false;
                        $error.text('This field is required!').addClass('show');
                        return;
                    }

                    if ($input.attr('id') === 'Password') {
                        if (value.length < 6) {
                            isValid = false;
                            $error.text('Password must be at least 6 characters long!').addClass('show');
                        }
                    }

                    if ($input.attr('id') === 'ConfirmPassword' && value !== $('#Password').val()) {
                        isValid = false;
                        $error.text('Passwords do not match!').addClass('show');
                    }
                });

                return isValid;
            });

            $('.form-control').on('input', function() {
                $(this).siblings('.validation-message').removeClass('show');
            });
        });
    </script>
</body>
</html>